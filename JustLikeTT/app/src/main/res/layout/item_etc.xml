<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/etc_frame"
            android:paddingHorizontal="10dp"
            android:paddingVertical="20dp"
            android:background="@color/white"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="14"
                    android:orientation="vertical">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/etc_radioBtn"
                        android:visibility="gone"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/etc_name"
                        android:text="강의 이름"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/etc_professor"
                        android:text="교수명"
                        android:textSize="16dp"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/etc_timeNroom"
                        android:text="강의시간/강의실"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:background="@drawable/ripple_effect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="삭제"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:id="@+id/etc_del_btn"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <ImageView
                        android:id="@+id/star_off"
                        android:src="@mipmap/empty_star"
                        android:visibility="visible"
                        android:layout_gravity="center"
                        android:layout_width="40dp"
                        android:layout_height="40dp">
                    </ImageView>



                    <ImageView
                        android:id="@+id/star_on"
                        android:src="@mipmap/yellow_star"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:layout_width="40dp"
                        android:layout_height="40dp">
                    </ImageView>



                </LinearLayout>

            </LinearLayout>



    <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/etc_grade"
                    android:text="학년"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/etc_pobtDiv"
                    android:text="구분"
                    android:layout_marginHorizontal="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:id="@+id/etc_credit"
                    android:text="학점"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:id="@+id/etc_lectNum"
                    android:text="과목번호"
                    />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>

